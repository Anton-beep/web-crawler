{
  "openapi": "3.0.3",
  "info": {
    "title": "Web Crawler Api",
    "description": "This is a documentation of endpoints served by the receiver (aka API-gateway). With this API you can user interacts with application, i.e. can authorize, creates projects.",
    "version": "1.0.0"
  },
  "externalDocs": {
    "description": "https://gitlab.crja72.ru/gospec/go1/web-crawler",
    "url": "http://swagger.io"
  },
  "servers": [
    {
      "url": "http://localhost:8080"
    }
  ],
  "tags": [
    {
      "name": "user",
      "description": "User logic"
    },
    {
      "name": "project",
      "description": "Project logic"
    }
  ],
  "paths": {
    "/user/register": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Register a new user",
        "requestBody": {
          "description": "User to create",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "username"
                  },
                  "email": {
                    "type": "string",
                    "example": "bib@bib.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "UserPassword123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas.json#/components/schemas/AccessToken"
                }
              }
            }
          },
          "400": {
            "$ref": "./responses.json#/components/responses/BasicError"
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Logs user into the system",
        "requestBody": {
          "description": "Existing user",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "login": {
                    "type": "string",
                    "example": "username or email"
                  },
                  "password": {
                    "type": "string",
                    "example": "UserPassword123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas.json#/components/schemas/AccessToken"
                }
              }
            }
          },
          "400": {
            "$ref": "./responses.json#/components/responses/BasicError"
          }
        }
      }
    },
    "/user/get": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "Gets user info by token",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "schema": {
              "type": "string",
              "example": "Bearer + your access token"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "username": {
                      "type": "string",
                      "example": "username"
                    },
                    "email": {
                      "type": "string",
                      "example": "bib@bib.com"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "./responses.json#/components/responses/BasicError"
          },
          "401": {
            "$ref": "./responses.json#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/user/update": {
      "put": {
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "schema": {
              "type": "string",
              "example": "Bearer + your access token"
            }
          }
        ],
        "tags": [
          "user"
        ],
        "summary": "Update user",
        "requestBody": {
          "description": "User to edit",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "username"
                  },
                  "email": {
                    "type": "string",
                    "example": "bib@bib.com"
                  },
                  "new_password": {
                    "type": "string",
                    "example": "UserPassword123"
                  },
                  "current_password": {
                    "type": "string",
                    "example": "UserPassword123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "./responses.json#/components/responses/BasicSuccess"
          },
          "400": {
            "$ref": "./responses.json#/components/responses/BasicError"
          },
          "401": {
            "$ref": "./responses.json#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/project/create": {
      "post": {
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "schema": {
              "type": "string",
              "example": "your access token"
            }
          }
        ],
        "tags": [
          "project"
        ],
        "summary": "Create a new project",
        "requestBody": {
          "description": "Project to create",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "theProject"
                  },
                  "start_url": {
                    "type": "string",
                    "example": "http://example.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "example": "abc10"
                    },
                    "message": {
                      "type": "string",
                      "example": "ok"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "./responses.json#/components/responses/BasicError"
          },
          "401": {
            "$ref": "./responses.json#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/project/get/{id}": {
      "get": {
        "tags": [
          "project"
        ],
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "schema": {
              "type": "string",
              "example": "your access token"
            }
          },
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "abc10"
            },
            "description": "ID of the project"
          }
        ],
        "summary": "Get project",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas.json#/components/schemas/Project"
                }
              }
            }
          },
          "400": {
            "$ref": "./responses.json#/components/responses/BasicError"
          },
          "401": {
            "$ref": "./responses.json#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/project/getAllShort": {
      "get": {
        "tags": [
          "project"
        ],
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "schema": {
              "type": "string",
              "example": "your access token"
            }
          }
        ],
        "summary": "Get names and ids of projects user has access to",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "./schemas.json#/components/schemas/ProjectShort"
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "./responses.json#/components/responses/BasicError"
          },
          "401": {
            "$ref": "./responses.json#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/project/delete/{id}": {
      "delete": {
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "schema": {
              "type": "string",
              "example": "your access token"
            }
          },
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "abc10"
            },
            "description": "ID of the project"
          }
        ],
        "tags": [
          "project"
        ],
        "summary": "Delete project",
        "responses": {
          "200": {
            "$ref": "./responses.json#/components/responses/BasicSuccess"
          },
          "400": {
            "$ref": "./responses.json#/components/responses/BasicError"
          },
          "401": {
            "$ref": "./responses.json#/components/responses/Unauthorized"
          }
        }
      }
    }
  }
}